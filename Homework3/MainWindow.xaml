<Window x:Class="Homework3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbA" HorizontalAlignment="Left" Height="86" Margin="102,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" TextChanged="TextBox_TextChanged" Text="Введите текст!"/>
        <TextBox x:Name="tbResult" HorizontalAlignment="Left" Height="19" Margin="470,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" IsReadOnlyCaretVisible="True" TextChanged="tbResult_TextChanged"/>
        <ComboBox x:Name="cmbA" HorizontalAlignment="Left" Margin="337,190,0,0" VerticalAlignment="Top" Width="69" RenderTransformOrigin="0.184,0" Height="19" SelectionChanged="ComboBox_SelectionChanged" IsSynchronizedWithCurrentItem="False" Background="#FFE05151">
            <ComboBoxItem Content="Согласные"/>
            <ComboBoxItem Content="Гласные"/>
        </ComboBox>
        <Button x:Name="btnA" Content="=" HorizontalAlignment="Left" Margin="420,191,0,0" VerticalAlignment="Top" Width="43" Click="btnA_Click"/>

    </Grid>
</Window>
